{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2], // 2칸 들여쓰기로 설정
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  }
}
